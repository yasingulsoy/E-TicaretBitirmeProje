@model CheckOutViewModel

@{
    ViewData["Title"] = "Satın Al";
}

<section class="container my-5">

    <div class="text-center">
        <h1 class="display-4">Satın Al</h1>
    </div>
    @if (Model.CartProducts.Any())
    {
        <div class="row">
            <div class="col-md-8">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <tr>
                            <th></th>
                            <th>Ürün</th>
                            <th>Fiyat</th>
                            <th>Adet</th>
                            <th>Toplam</th>

                        </tr>
                        <tbody>

                            @foreach (var item in Model.CartProducts)
                            {
                                <tr>
                                    <td>
                                        <img src="/Img/Products/@item.Product.Image" alt="" height="37" />
                                    </td>
                                    <td>
                                        <a class="nav-link text-dark" href="/Products/Details/@item.Product.Id">
                                            @item.Product.Name
                                        </a>
                                    </td>
                                    <td>
                                        @item.Product.Price.ToString("c")
                                    </td>
                                    <td>
                                        @item.Quantity
                                    </td>
                                    <td>
                                        @((item.Quantity * item.Product.Price).ToString("c"))
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
            <div class="col-md-4">
                <h4>Sipariş Özeti</h4>

                <table class="table">
                    <tr>
                        <td>Ürün Toplamı: </td>
                        <td>
                            @Model.TotalPrice.ToString("c")
                        </td>
                    </tr>
                    <tr>
                        <td>Kargo: </td>
                        <td>
                            @(Model.TotalPrice > 250 ? "Ücretsiz" : Model.CartProducts.Any() ? "120₺" : "0")
                        </td>
                    </tr>
                    <tr>
                        <th>Sipariş Toplamı: </th>
                        <td>
                            @(Model.TotalPrice > 250 ? Model.TotalPrice.ToString("c") : (Model.CartProducts.Any() ? Model.TotalPrice + 120 : Model.TotalPrice))
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <hr />
        if (Model.Adresses == null || !Model.Adresses.Any())
        {
            <div class="alert alert-secondary my-5">
                <h5 class="text-danger">
                    Kayıtlı Adres Bulunmamaktadır!
                </h5>
                <h6>
                    Sipariş Verebilmek İçin En Az Bir Adres Eklemelisiniz.
                </h6>
                <a href="/MyAdresses/Create" class="btn btn-danger">
                    <i class="bi-person-plus me-1"></i>
                    Adres Ekle
                </a>
            </div>

        }
        else
        {
            <form asp-action="CheckOut">
                <div class="my-5">
                    <h3>Teslimat Adresi</h3>
                    <div class="row row-cols-3">
                        @foreach (var item in Model.Adresses)
                        {
                            <div class="col">
                                <div class="card">
                                    <div class="card-header">
                                        <div class="form-check">
                                            <label class="col-form-label">
                                                <input class="form-check-input" type="radio" name="DeliveryAdress" value="@item.AdressGuid" @(item.IsDeliveryAdress ? "checked" : "") />
                                                @item.Title
                                            </label>
                                        </div>
                                    </div>

                                    <div class="card-body">
                                        <p>
                                            @item.OpenAdress @item.District @item.City
                                        </p>
                                        <div class="form-check">
                                            <label class="col-form-label">
                                                <input class="form-check-input" type="radio" name="BillingAdress" value="@item.AdressGuid" @(item.IsBillingAdress ? "checked" :"") />
                                                Fatura Adresi
                                            </label>
                                        </div>
                                    </div>


                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="my-5">
                    <h2>Ödeme Seçenekleri</h2>
                    <h3>Kart İle Öde</h3>
                    <h6>Kart ile ödemeyi seçtiniz. Banka veya Kredi Kartı kullanarak ödemenizi güvenle yapabilirsiniz.</h6>
                    <h6>Kart Bilgileri</h6>
                    <div class="row">
                        <div class="col-md-4">
                            <label>
                                Kart Üzerindeki İsim
                            </label>
                            <input type="text" name="CardNameSurname" class="form-control" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <label>
                                Kart Numarası
                            </label>
                            <input type="number" name="CardNumber" class="form-control" required />
                        </div>
                    </div>
                    <div class="row">
                        <label>Son Kullanma Tarihi</label>
                        <div class="col-md-2">
                            <select class="form-select" name="CardMonth" required>
                                <option disabled>Ay</option>
                                <option value="1">01</option>
                                <option value="2">02</option>
                                <option value="3">03</option>
                                <option value="4">04</option>
                                <option value="5">05</option>
                                <option value="6">06</option>
                                <option value="7">07</option>
                                <option value="8">08</option>
                                <option value="9">09</option>
                                <option value="10">10</option>
                                <option value="11">11</option>
                                <option value="12">12</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <select class="form-select" name="CardYear" required>
                                <option disabled>Yıl</option>
                                <option value="2025">2024</option>
                                <option value="2026">2026</option>
                                <option value="2027">2027</option>
                                <option value="2028">2028</option>
                                <option value="2029">2029</option>
                                <option value="2030">2030</option>
                                <option value="2031">2031</option>
                                <option value="2032">2032</option>
                                <option value="2033">2033</option>
                                <option value="2034">2034</option>
                                <option value="2035">2035</option>
                                <option value="2036">2036</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <label>CVV</label>
                            <input type="number" name="CVV" class="form-control" required />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success mt-2">Ödeme Yap</button>
                </div>
            </form>
        }
    }
    else
    {
        <div class="container">

            <div class="alert alert-warning my-5">

                <h3>Sepetinizde Ürün Bulunmamaktadır.</h3>
            </div>


        </div>
    }




</section>



