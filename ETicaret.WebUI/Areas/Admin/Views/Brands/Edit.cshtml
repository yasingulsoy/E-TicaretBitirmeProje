@model Brand
@{
    ViewData["Title"] = "Marka Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<hr />
<div class="row">
    <div class="col-md-4">
        @* enctype dosya yüklemek istiyorsak kullanılır *@
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* Eski verileri tutar hidden *@
            <input type="hidden" asp-for="Id" /> 
            <input type="hidden" asp-for="CreateDate" />
            <input type="hidden" asp-for="Logo" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Logo" class="control-label"></label>
                <input asp-for="Logo" class="form-control" type="file" />
                <span asp-validation-for="Logo" class="text-danger"></span>
                @if (Model.Logo!=null && !string.IsNullOrWhiteSpace(Model.Logo))
                {
                    <img  src="/Img/@Model.Logo" height="75"/>
                        <label class="form-check-label">
                          @Html.CheckBox("cbResmiSil") Logoyu Sil
                        </label>   
                }
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary mt-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Dön</a>
</div>






