@model IEnumerable<Order>

@{
    ViewData["Title"] = "Siparişler";
}


<p>
    <a asp-action="Create" class="btn btn-outline-primary"><i class="fa-solid fa-plus"></i> Yeni Ekle</a>
</p>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice) ₺
            </th>
            <th>
                @Html.DisplayNameFor(model => model.appUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th
             <th>
                @Html.DisplayNameFor(model => model.OrderState)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.appUser.Name)
                    @Html.DisplayFor(modelItem => item.appUser.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.OrderState)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i class="fa-solid fa-pen"></i> Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="fa-solid fa-magnifying-glass"></i> Detay</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i> Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
