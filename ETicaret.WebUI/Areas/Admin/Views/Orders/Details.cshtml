@model Order

@{
    ViewData["Title"] = "Sipariş Detay";
}


<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice) ₺
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AppUserId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AppUserId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.appUser)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.appUser.Name)
            @Html.DisplayFor(model => model.appUser.Surname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BillingAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BillingAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveryAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeliveryAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderState)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderState)
        </dd>
    </dl>
    @if (Model.OrderLines.Any())
    {
        <table class="table table-striped table-sm table-hover">
            <tr>
                <th></th>
                <th>Ürün</th>
                <th>Fiyat</th>
                <th>Adet</th>
                <th>Toplam</th>

            </tr>
            <tbody>

                @foreach (var line in Model.OrderLines)
                {
                    <tr>
                        <td>
                            <img src="/Img/Products/@line.Product.Image" alt="" height="37" />
                        </td>
                        <td>
                            <a class="nav-link text-dark" href="/Products/Details/@line.Product.Id">
                                @line.Product.Name
                            </a>
                        </td>
                        <td>
                            @line.UnitPrice.ToString("c")
                        </td>
                        <td>
                            @line.Quantity
                        </td>
                        <td>
                            @((line.Quantity * line.UnitPrice).ToString("c"))
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Düzenle</a> |
    <a asp-action="Index">Listeye Dön</a>
</div>
